:host {
  /* FitHub Color Palette - inspired by the reference design */
  --fithub-primary-blue: oklch(51.01% 0.274 263.83);
  --fithub-electric-violet: oklch(53.18% 0.28 296.97);
  --fithub-french-violet: oklch(47.66% 0.246 305.88);
  --fithub-vivid-pink: oklch(69.02% 0.277 332.77);
  --fithub-orange: oklch(72% 0.19 50);

  /* Backgrounds */
  --dark-bg: #0a0a2e;
  --dark-surface: #16213e;
  --glass-bg: rgba(22, 33, 62, 0.75);
  --glass-border: rgba(255, 255, 255, 0.1);

  /* Text Colors */
  --text-white: #ffffff;
  --text-light: rgba(255, 255, 255, 0.85);
  --text-muted: rgba(255, 255, 255, 0.6);

  /* Gradients - matching FitHub brand */
  --gradient-primary: linear-gradient(135deg, var(--fithub-primary-blue), var(--fithub-electric-violet));
  --gradient-accent: linear-gradient(135deg, var(--fithub-orange), var(--fithub-vivid-pink));
  --gradient-text: linear-gradient(90deg, var(--fithub-primary-blue), var(--fithub-electric-violet));

  /* Design tokens */
  --border-radius: 16px;
  --border-radius-sm: 12px;
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
  --shadow-md: 0 4px 20px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.4);
  --shadow-glow: 0 0 20px rgba(81, 97, 234, 0.3);
}

.map-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
  background-color: var(--dark-bg);
}

#map {
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* Custom Marker Styles */
:host ::ng-deep .custom-marker {
  background: transparent;
  border: none;
}

:host ::ng-deep .marker-pin {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gradient-primary);
  border-radius: 50% 50% 50% 0;
  transform: rotate(-45deg);
  box-shadow: var(--shadow-md), var(--shadow-glow);
  position: relative;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

:host ::ng-deep .marker-pin:hover {
  transform: rotate(-45deg) scale(1.1);
  box-shadow: var(--shadow-lg), 0 0 30px rgba(81, 97, 234, 0.5);
}

:host ::ng-deep .marker-pin svg {
  transform: rotate(45deg);
  color: var(--text-white);
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

:host ::ng-deep .park-marker .marker-pin {
  background: var(--gradient-accent);
  box-shadow: var(--shadow-md), 0 0 20px rgba(255, 105, 180, 0.3);
}

:host ::ng-deep .park-marker .marker-pin:hover {
  box-shadow: var(--shadow-lg), 0 0 30px rgba(255, 105, 180, 0.5);
}

/* Floating UI Elements */
.map-overlay {
  position: absolute;
  top: 24px;
  left: 24px;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 90%;
  max-width: 340px;
  gap: 16px;
}

/* Search Bar */
.search-bar {
  width: 100%;
  padding: 16px 24px;
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--border-radius);
  border: 1px solid var(--glass-border);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.search-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--gradient-primary);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.search-bar:hover,
.search-bar:focus-within {
  border-color: rgba(81, 97, 234, 0.3);
  box-shadow: var(--shadow-md), var(--shadow-glow);
}

.search-bar:focus-within::before {
  opacity: 1;
}

.search-bar input {
  flex-grow: 1;
  background: transparent;
  border: none;
  outline: none;
  color: var(--text-white);
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.search-bar input::placeholder {
  color: var(--text-muted);
  font-weight: 400;
}

/* Filter Chips */
.filter-chips {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  padding: 4px;
}

.chip {
  padding: 10px 18px;
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  color: var(--text-light);
  border-radius: 24px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  border: 1px solid var(--glass-border);
  font-weight: 500;
  font-size: 14px;
  letter-spacing: 0.02em;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  gap: 6px;
}

.chip svg {
  opacity: 0.8;
}

.chip::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--gradient-primary);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.chip:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-sm);
  border-color: rgba(81, 97, 234, 0.3);
}

.chip.active {
  color: var(--text-white);
  font-weight: 600;
  border: 1px solid transparent;
  box-shadow: var(--shadow-md), var(--shadow-glow);
  transform: translateY(-2px);
}

.chip.active::before {
  opacity: 1;
}

top: 16px;
max-width: calc(100% - 32px);
}

